.container {
  position: relative;
  height: 100%;
  padding-top: 10px;
  box-sizing: border-box;

  @media (min-height: 600px) {
    padding-top: 30px;
  }
}

.link {
  text-align: center;
  color: white;
  display: block;
  font-family: $font-sans;
  font-size: 1.125rem;
  text-transform: uppercase;
}

.buttons {
  position: fixed;
  bottom: 10px;
  left: 10px;
  right: 10px;
  display: flex;
}
