.container {
  margin: 0;
  padding: 0;
  margin-top: 6rem;
}

.player {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.playerName {
  font-family: $font-serif;
  color: white;
  font-weight: bold;
  font-size: 25px;
}

.spacer {
  flex-grow: 2;
  margin-left: 1rem;
  margin-right: 1rem;
  height: 6px;
  background-color: rgba(0,0,0,0.3);
}

.playerScore {
  font-family: $font-serif;
  color: white;
  font-weight: bold;
  font-size: 25px;
}
