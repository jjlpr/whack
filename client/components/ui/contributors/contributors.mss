.container {
  border: 6px solid #FFF;
  background-color: $backgroundBlue;
  text-align: center;
  padding-bottom: 2rem;
  margin-bottom: 1rem;
}

.title {
  font-style: italic;
  color: white;
  font-weight: 100;
  font-size: 2rem;
}

.logo {
  box-sizing: border-box;
  width: 100%;
  padding: 0 1rem;
}

.subTitle {
  color: #A2936C;
  text-transform: uppercase;
  margin: 0;
  position: relative;
  top: -1.5rem;
}

.link {
  display: block;
  color: white;
  margin-bottom: 1rem;
  font-family: sans-serif;
  font-size: 1.25rem;
}
