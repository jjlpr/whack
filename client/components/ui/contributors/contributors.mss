
.title {
  font-style: italic;
  color: white;
  font-weight: 100;
  font-size: 2rem;
  text-align: center;
}

.logo {
  box-sizing: border-box;
  width: 100%;
  padding: 0 1rem;
}

.subTitle {
  color: $lightBrown;
  text-transform: uppercase;
  text-align: center;
  margin: 0;
  position: relative;
  top: -1.5rem;
  font-size: 1rem;
}

.link {
  display: block;
  color: white;
  margin-bottom: 1rem;
  font-family: $font-sans;
  font-size: 1.125rem;
  text-align: center;
}
