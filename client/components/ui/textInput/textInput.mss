.label {
  display: block;
  text-align: center;
  font-size: 25px;
  color: white;
  margin-bottom: 11px;
  font-style: italic;
  font-weight: bold;
}

.input {
  width: 100%;
  height: 50px;
  padding: 0;
  border: none;
  font-size: 25px;
  text-align: center;
  outline: none;
  font-family: $font-sans;
}

.input:focus {
  outline: none;
}
