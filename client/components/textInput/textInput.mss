.label {
  display: block;
  text-align: center;
  font-size: 25px;
  color: white;
  margin-bottom: 11px;
}

.input {
  width: 100%;
  height: 50px;
  border: 1px dotted transparent;
  font-size: 25px;
  text-align: center;
  box-shadow: 4px 5px 0px 0px rgba(181,163,199,0.2);
  outline: none;
}

.input:focus {
  box-shadow: 4px 5px 0px 0px rgba(181,163,199,0.5);
}