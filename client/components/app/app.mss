html,
body {
    background: url(images/bg.svg);
    background-size: cover;
    padding: 0;
    margin: 0;
    font-family: $font-serif;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}

html {
  touch-action: manipulation;
}

.app {
    position: relative;
    height: 100vh;
    width: 100vw;
    box-sizing: border-box;
    max-width: 400px;
    margin: 0 auto;
    padding: 10px;
}
