.roundPlayer {
    position: relative;
    z-index: 2;
    text-align: center;
}

.roundPlayerTitle {
    font-size: 1.8rem;
    font-weight: 100;
    font-style: italic;
    font-family: $font-serif;
    color: white;
    margin: 0;
}

.roundPlayerSubtitle {
    font-size: 0.9rem;
    color: $lightBrown;
    font-family: $font-serif;
    text-transform: uppercase;
    text-align: center;
    margin: 0;
}

.roundPlayerScore {
    font-size: 4rem;
    font-family: $font-sans;
    color: white;
    margin: 0;
}

.phonePlayer {
    position: fixed;
    bottom: 15px;
    left: 5%;
    width: 90%;
}

.phonePlayerScore {
    padding: 0;
    text-align: center;
    font-size: 1rem;
    font-weight: 100;
    font-style: italic;
    color: $lightBrown;
}
