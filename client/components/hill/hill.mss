.hill {
    position: absolute;
    left: -20px;
    right: -20px;
    bottom: -400px;
    height: 500px;
    background: linear-gradient(to bottom, rgba(30,138,66,1) 0%, rgba(56,168,94,1) 100%);
    border-radius: 50% / 10%;
}

.flowerLeftOuter {
    position: absolute;
    left: 40px;
    top: -50px;
}

.flowerLeftInner {
    position: absolute;
    left: 140px;
    top: -65px;
}

.flowerRightInner {
    position: absolute;
    right: 40px;
    top: -60px;
}

.flowerRightOuter {
    position: absolute;
    right: 10px;
    top: -40px;
}
